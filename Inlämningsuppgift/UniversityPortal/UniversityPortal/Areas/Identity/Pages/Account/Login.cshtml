@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-6">
            <section>
                <form id="account" method="post">
                    <h4>Var vänlig skriv in dina uppgifter.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="form-label" asp-for="Input.Email">E-postadress</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="Input.Password">Lösenord</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox mt-1">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" /> Kom ihåg mig</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn custombutton">Log in</button>
                    </div>
                </form>
            </section>
        </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
