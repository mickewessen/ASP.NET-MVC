@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <form method="post">
        <div>
            <div class="card-header">
                <h2>Editera användarroller</h2>
                <h5>Uppdatera roll för @ViewBag.DisplayName.</h5>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].Selected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].Selected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Uppdatera" class="btn custombutton"
                    style="width:auto" />
                <a asp-action="Index" asp-route-id="@ViewBag.userId" class="btn custombutton" style="width:auto">Avbryt</a>
            </div>
        </div>
    </form>
</div>

